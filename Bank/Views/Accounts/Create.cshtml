@model Bank.Models.ViewModel.Accountviewmodel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Accounts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerIDDD" class="control-label"></label>
                <select asp-for="CustomerIDDD" class ="form-control" >
                    @foreach(var item in Model.customers){
                        <option value="@item.CustomerID">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccBalance" class="control-label"></label>
                <input asp-for="AccBalance" class="form-control" />
                <span asp-validation-for="AccBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <input asp-for="AccountType" class="form-control" />
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllAccounts">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
